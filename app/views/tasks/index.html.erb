
<div class="row container">
  <div class="col">
    <h3>Mis Tareas</h3>
  </div>

  <div class="col">
    <%= link_to  new_task_path ,{remote: true, class: "btn btn-add-tag", id: "anadir-categoria-btn"} do %>
       Crear Tarea <i class="fa-solid fa-plus"></i>
      <% end %>
  </div>

</div>

<div class="container list-tasks">
  <ul id="tasks-lists">
    <li id="tag-id">
      <div class="row">
      <div class="col-2">
        <a >
          inicio
        </a>
      </div>
      <div class="col-2">
        <a >
          fin
        </a>
      </div>
      <div class="col-4">
        <span> titulo</span>
      </div>
      <div class="col-2">
        Etiquetas
      </div>
      <div class="col-2">

        <span>Editar/Eliminar</span>
      </div>
      </div>
    </li>
  <%@tasks.each do |task|%>
  <li id="task-<%=task.id%>">
    <div class="row">
     <div class="col-2">
      <span> <%=task.start_date.to_s.to_date%> </span>
     </div>
     <div class="col-2">
      <span> <%=task.end_date.to_s.to_date %> </span>
     </div>
     <div class="col-4">
      <span> <%= task.title%> </span>
     </div>
     <div class="col-2">
     </div>
     <div class="col-2">
      <%= link_to edit_task_path(task), html_options = {class: "btn  btn-xs", remote: true, style: "color: black"} do %>
                  <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
      <%= link_to task, remote: true, method: :delete, data: { confirm: "Â¿Borrar categoria: #{task.title}?"}, class: "btn btn-xs"  do %>
                  <i class="fa-solid fa-trash-can"></i>
                <% end %>
     </div>

    </div>
  </li>
  <% end %>

  </ul>
</div>
