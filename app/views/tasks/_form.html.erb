<%= form_for @task, remote: true do |f| %>

    <div class="item form-group<%= @task.errors[:title].any? ? ' has-error has-feedback' : '' %>">
      <div class="input-group">
        <%= f.text_field :title, {:class=> "form-control", :placeholder=>"Introduzca el nombre de la tarea..."} %>
        <%if @task.errors[:title].any? %>
          <p class="bg-danger"><%= @task.errors[:title].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>

    <div class="item mt-3 form-group<%= @task.errors[:description].any? ? ' has-error has-feedback' : '' %>">
      <div class="input-group">
        <%= f.text_area :description, {class: "form-control", :placeholder=>"Introduzca una descripciÃ³n de la tarea..."} %>
        <%if @task.errors[:description].any? %>
          <p class="bg-danger"><%= @task.errors[:description].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>

    <div class="item mt-3 mb-3 form-group<%= @task.errors[:importance].any? ? ' has-error has-feedback' : '' %>">
      <div class="input-group">
        <%= f.number_field :importance, {:class=> "form-control", :placeholder=>"Establece un Importancia del 1 al 5 "} %>
        <%if @task.errors[:importance].any? %>
          <p class="bg-danger"><%= @task.errors[:importance].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col">
        <div class="item form-group<%= @task.errors[:start_date].any? ? ' has-error has-feedback' : '' %>">
          <%= f.label :start_date, "Fecha de inicio: " %>
          <div class="input-group">
            <%= f.date_field :start_date, {:class=> "form-control", :placeholder=>"fecha"} %>
            <%if @task.errors[:start_date].any? %>
              <p class="bg-danger"><%= @task.errors[:start_date].to_s[/\w([^"]*)/] %></p>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col">
        <div class="item form-group<%= @task.errors[:end_date].any? ? ' has-error has-feedback' : '' %>">
          <%= f.label :end_date, "Fecha Fin: " %>
          <div class="input-group">
            <%= f.date_field :end_date, {:class=> "form-control", :placeholder=>"fecha"} %>
            <%if @task.errors[:end_date].any? %>
              <p class="bg-danger"><%= @task.errors[:end_date].to_s[/\w([^"]*)/] %></p>
            <% end %>
          </div>
        </div>

      </div>
    </div>
    <div class="row">
      <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
        <%= f.submit @task.new_record? ? "Crear Tarea" : "Actualizar Tarea", :class => "btn btn-success"%>
      </div>

    </div>
<% end %>
