<%= form_for @tag, remote: true do |f| %>

    <div class="item form-group<%= @tag.errors[:title].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :title, "Nombre de Etiqueta: " %>
      <div class="input-group">
        <%= f.text_field :title, {:class=> "form-control", :placeholder=>"Introduzca el nombre de la categoría..."} %>
        <%if @tag.errors[:title].any? %>
          <p class="bg-danger"><%= @tag.errors[:title].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>

    <div class="item form-group<%= @tag.errors[:color].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :color, "color de la Etiqueta: " %>
      <div class="input-group">
        <%= f.text_area :color, {class: "form-control", :placeholder=>"Introduzca la descripción de la categoría..."} %>
        <%if @tag.errors[:color].any? %>
          <p class="bg-danger"><%= @tag.errors[:color].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>
    <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
      <%= f.submit @tag.new_record? ? "Crear Categoría" : "Actualizar Categoría", :class => "btn btn-success"%>
    </div>
<% end %>
